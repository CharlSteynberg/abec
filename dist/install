#! /usr/bin/node

process.chdir(__dirname);
require("./abec.min.js");
dump("installing abec as cli ...");

upon("allReady",function install()
{
    if(exists("~/.local")&&!exists("~/.local/bin")){create("~/.local/bin/")};
    disk.copyFile("./abec",((exists("~/.local/bin")||exists("~/bin")||"/usr/local/bin")+"/abec"));

    dump("done");
});
